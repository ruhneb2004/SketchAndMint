pragma solidity ^0.8.20;

import {Script} from "forge-std/Script.sol";
import {SonthamNft} from "../src/SonthamNft.sol";
import {DevOpsTools} from "lib/foundry-devops/src/DevOpsTools.sol";

contract MintNft is Script {
    SonthamNft public s_sonthamNft;
    string public s_demoTokenData =
        '{"name":"Heart","description":"Broken and pierced a long time ago","image":"data:image/svg+xml;base64,","attributes":[{"trait_type":"Sketch Score","value":60,"max_value":100},{"trait_type":"Creativity","value":70,"max_value":100},{"trait_type":"Complexity","value":30,"max_value":100}]}';

    function run() external {
        s_sonthamNft = SonthamNft(DevOpsTools.get_most_recent_deployment("SonthamNft", block.chainid));
        mintNftUsingConfig();
    }

    function mintNft(address account, string memory tokenData) public returns (uint256) {
        vm.startBroadcast(account);
        s_sonthamNft.mintNFT(tokenData);
        return s_sonthamNft.getTokenCounter() - 1;
    }

    function mintNftUsingConfig() public {
        address account;
        if (block.chainid == 31337) account = 0x1804c8AB1F12E6bbf3894d4083f33e07309d1f38;
        else account = 0x336D9dBC1D1F8f1F3959Dc9CCEB45Fb915a2E4C2;

        mintNft(account, s_demoTokenData);
    }
}
